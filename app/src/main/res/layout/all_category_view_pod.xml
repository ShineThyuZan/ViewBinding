<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/_80sdp"
    android:layout_height="@dimen/_120sdp"
    android:layout_marginEnd="@dimen/_4sdp"
    android:layout_marginStart="@dimen/_4sdp"
    android:layout_marginTop="@dimen/_4sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_16sdp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvAllCategoryProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_8sdp"
            android:fontFamily="@font/dmsans_regular"
            android:text="Product Name "
         android:textAlignment="center"
            android:textSize="@dimen/_12sdp"
            app:layout_constraintEnd_toEndOf="@+id/ivAllCategoryProduct"
            app:layout_constraintStart_toStartOf="@+id/ivAllCategoryProduct"
            app:layout_constraintTop_toBottomOf="@+id/ivAllCategoryProduct" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivAllCategoryProduct"
            android:layout_width="0dp"
            android:layout_height="@dimen/_60sdp"
            android:layout_margin="@dimen/_16sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/item_bag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>